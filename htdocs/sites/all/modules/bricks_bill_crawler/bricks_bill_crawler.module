                      AND mail.field_bill_check_mail_value = 1
                      AND pdf.field_bill_check_pdf_value = 1
                      AND (fr.field_bill_from_value IN('BrickLink') OR fr.field_bill_from_value IS NULL)", 
                      array(':y' => $year, ':m' => $month));

  $sum = $result->fetchAssoc();  
  $row_lots[] = array('data' => $sum['lots']);
  $row_items[] = array('data' => $sum['items']);
  
  $rows[] = $row_lots;
  $rows[] = $row_items;
  
  $output .= theme('table', array('header' => $header, 'rows' => $rows, 'attributes' => array()));
  
  return $output;
}

