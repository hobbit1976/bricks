function bricks_bill_crawler_send_pdf_as_mail() {

  $args = func_get_args();
  $path = filter_xss(implode('/', $args));

  // Handle the query
  $query = $_GET;
  unset($query['q']);

  if (!empty($path)) {
    if ($alias = drupal_lookup_path('source', $path)) {
      // Alias
      $path_arr = explode('/', $alias);
