function bricks_bill_crawler_save_ebay_bill($rechnungs_array = array()) {
  // Rechnungssprache festlegen
  $language = 'en';
  if ($rechnungs_array['land'] == 'Deutschland' || $rechnungs_array['land'] == 'Österreich') {
    $language = 'de';
  }
      // Objekt anlegen
      $bill_node = new stdClass();
      // Typ festlegen
      $bill_node->type = 'bill';
      // default Werte setzen
      node_object_prepare($bill_node);
      // UID auf Admin setzen
      $bill_node->uid = 1;
      // nicht voröffentlichen
      $bill_node->status = 0;
      $bill_node->promote = 0;
      // Sprache auf neutral setzen
      $bill_node->language = LANGUAGE_NONE;
      // OrderID als Titel setzen
      $bill_node->title = date('y') . '-EB#' . $rechnungs_array['rechnungsnummer'];;
      // Rechnungssprache setzen
      $bill_node->field_bill_language[$bill_node->language][0]["value"] = $language;
      // Rechnungsnummer setzen
      $bill_node->field_bill_number[$bill_node->language][0]["value"] = date('y') . '-EB#' . $rechnungs_array['rechnungsnummer'];
      // Rechnungsdatum setzen
      $bill_node->field_bill_invoice_date[$bill_node->language][0]["value"] = date('d.m.Y');
      // Lieferdatum setzen
      $bill_node->field_bill_delivery_date[$bill_node->language][0]["value"] = date('d.m.Y');  
      // Zahlungsziel setzen
      $bill_node->field_bill_term_of_payment[$bill_node->language][0]["value"] = $language == 'de' ? 'sofort fällig' : 'immediately due and payable';
      // Anrede setzen
      $bill_node->field_bill_salutation[$bill_node->language][0]["value"] = utf8_encode($rechnungs_array['name']);
      // Adresse setzen
      $bill_node->field_bill_address[$bill_node->language][0]["value"] = utf8_encode($rechnungs_array['name']) . '<br />' .  utf8_encode($rechnungs_array['addresse_1']) . '<br />' . utf8_encode($rechnungs_array['addresse_2']) . '<br />' . utf8_encode($rechnungs_array['plz']) . ', ' . utf8_encode($rechnungs_array['ort']) . (utf8_encode($rechnungs_array['region']) == 'default' ? '' : (utf8_encode($rechnungs_array['region']) . '<br />')) . '<br />' . utf8_encode($rechnungs_array['land']);
      // Herkunftsland setzen
      $bill_node->field_bill_country[$bill_node->language][0]["value"] = utf8_encode($rechnungs_array['land']); 
      // E-Mail setzen
      $bill_node->field_bill_e_mail[$bill_node->language][0]["value"] = $rechnungs_array['email'];
      // Anmerkung setzen
      //$bill_node->field_bill_orderremarks[$bill_node->language][0]["value"] = '';
      // PDF-Erzeugung setzen
      $bill_node->field_bill_check_pdf[$bill_node->language][0]["value"] = 0;
      // Mail versenden
      $bill_node->field_bill_check_mail[$bill_node->language][0]["value"] = 0;
      // MwSt.
      $bill_node->field_add_vat[$bill_node->language][0]["value"] = $rechnungs_array['art_mwst'] == '19%' ? 1 : 0;
      // 'Rechnung von' setzen
      $bill_node->field_bill_from[$bill_node->language][0]["value"] = 'ebay'; 
      // Order Items setzen
      $item_numbers = 1;
      $number_items = 0;  
      $sum_items = 0.000;

      foreach ($rechnungs_array['artikel'] as $key => $value) {
        // extra items
        if (!empty($value['art_nr'])) {
          $number_items++;
          $bill_node->field_bill_items_item[$bill_node->language][]["value"] = $item_numbers;
          $bill_node->field_bill_items_number[$bill_node->language][]["value"] = $value['art_nr'];
          $bill_node->field_bill_items_description[$bill_node->language][]["value"] = utf8_encode($value['art_bezeichnung']);
          $bill_node->field_bill_items_quantity[$bill_node->language][]["value"] = $value['art_stueckzahl'];
          $bill_node->field_bill_items_unit_price[$bill_node->language][]["value"] = str_replace(',', '.', str_replace('EUR ', '', $value['art_preis']));          
          $item_numbers++;
        }
      }
 
      // Versand setzen 
      $bill_node->field_shipping_packaging[$bill_node->language][0]["value"] = str_replace(',', '.', str_replace('EUR ', '', $rechnungs_array['art_versand'])); 
  
      if (!empty($rechnungs_array['art_versand']) && strlen($rechnungs_array['art_versand']) > 0) {             
        $bill_node->field_bill_items_item[$bill_node->language][]["value"] = $item_numbers;
        $bill_node->field_bill_items_number[$bill_node->language][]["value"] = $language == 'de' ? 'V' : 'S';
        $bill_node->field_bill_items_description[$bill_node->language][]["value"] = $language == 'de' ? 'Verpackung & Versand' : 'Shipping & Packaging';
        $bill_node->field_bill_items_quantity[$bill_node->language][]["value"] = 1;
        $bill_node->field_bill_items_unit_price[$bill_node->language][]["value"] = str_replace(',', '.', str_replace('EUR ', '', $rechnungs_array['art_versand']));
        $item_numbers++;        
      }      
    
      // Zahlungstyp setzen
      $bill_node->field_bill_paymenttype[$bill_node->language][0]["value"] = utf8_encode($rechnungs_array['art_zahlung']);  
      $bill_node->field_bill_paypal_id[$bill_node->language][0]["value"] = utf8_encode($rechnungs_array['paypal_id']);    
    
      // Node speichern
      if ($bill_node = node_submit($bill_node)) {
        node_save($bill_node);      
      }	
}

function bricks_bill_crawler_finance_overview() {
  $output = '';
  
  $rows = array();

  $header = array(t('Monat'), t('Bruttoumsatz'), t('Nettoumsatz'));
  
  // alle Monate auslesen mit Bruttoumsatz
  $result = db_query("SELECT STR_TO_DATE(d.field_bill_invoice_date_value,'%d.%m.%Y') as date, 
                      YEAR(STR_TO_DATE(d.field_bill_invoice_date_value,'%d.%m.%Y')) as year, 
                      MONTH(STR_TO_DATE(d.field_bill_invoice_date_value,'%d.%m.%Y')) as month, 
                      MONTHNAME(STR_TO_DATE(d.field_bill_invoice_date_value,'%d.%m.%Y')) as monthname, 
                      SUM(p.field_bill_items_total_price_value) as brutto 
                      FROM field_data_field_bill_invoice_date d 
                      JOIN field_data_field_bill_items_number n  USING(`entity_id`)
                      JOIN field_data_field_bill_items_total_price p USING(entity_id)
                      LEFT JOIN field_data_field_bill_cancel c USING(entity_id)
                      JOIN field_data_field_bill_check_mail mail USING(entity_id)
                      JOIN field_data_field_bill_check_pdf pdf USING(entity_id)
                      WHERE (c.field_bill_cancel_value = 0 OR c.field_bill_cancel_value IS NULL)
                      AND mail.field_bill_check_mail_value = 1
                      AND pdf.field_bill_check_pdf_value = 1
                      AND n.delta = p.delta
                      GROUP BY YEAR(date), MONTH(date) 
                      ORDER BY YEAR(date), MONTH(date)");
  foreach ($result as $record) {
    // Versandkosten je Monat für Nettoumsatz
    $result_versand = db_query("SELECT SUM(p.field_bill_items_total_price_value) as price
                                FROM field_data_field_bill_invoice_date d 
                                JOIN field_data_field_bill_items_number n  USING(`entity_id`)
                                JOIN field_data_field_bill_items_total_price p USING(entity_id)
                                LEFT JOIN field_data_field_bill_cancel c USING(entity_id)
                                JOIN field_data_field_bill_check_mail mail USING(entity_id)
                                JOIN field_data_field_bill_check_pdf pdf USING(entity_id)
                                WHERE YEAR(STR_TO_DATE(d.field_bill_invoice_date_value,'%d.%m.%Y')) = :y 
                                AND MONTH(STR_TO_DATE(d.field_bill_invoice_date_value,'%d.%m.%Y')) = :m
                                AND (c.field_bill_cancel_value = 0 OR c.field_bill_cancel_value IS NULL)
                                AND mail.field_bill_check_mail_value = 1
                                AND pdf.field_bill_check_pdf_value = 1
                                AND n.delta = p.delta
                                AND n.field_bill_items_number_value IN('V','S')", array(':y' => $record->year, ':m' => $record->month));
    $sum_versand = $result_versand->fetchAssoc();
    $row = array();
    $row[] = array('data' => l($record->monthname . ' - ' . $record->year, 'bill_crawler_finance_month_overview/' . $record->month . '/' . $record->year));    
    $row[] = array('data' => number_format($record->brutto, 2, ',', '.') . '€'); 
    $row[] = array('data' => number_format($record->brutto-$sum_versand['price'], 2, ',', '.') . '€'); 
    $rows[] = $row;
  }
  
  $output .= theme('table', array('header' => $header, 'rows' => $rows, 'attributes' => array()));
  
  return $output;
}

